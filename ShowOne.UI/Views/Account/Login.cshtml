@model UserLoginRequest
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<body style="background-color: #ebe9e4;">

    <div class="container border p-3 px-4 mt-4">
        <div class="d-flex flex-row justify-content-center">
            <h1>Login</h1>
        </div>
        <hr />

        <div class="row my-2">

            <div class="col my-2">
                <label>Email Address:</label>
                <input class="form-input" />
            </div>
        </div>



        <div class="row my-2">
            <div class="col">
                <label>New Password:</label>
                <input class="form-input" />
            </div>

        </div>

        <div class="row my-2">

            <div class="d-flex justify-content-center my-3">
                <button class="btn btn-primary">Login</button>
            </div>

        </div>

    </div>






</body>

</html>



